{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "summary.schema.json",
  "title": "MiniFlow Run Summary",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "meta",
    "pipeline",
    "asr",
    "llm",
    "tts"
  ],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "experiment",
        "run_id",
        "timestamp",
        "num_trials",
        "num_warmup_trials",
        "status_counts"
      ],
      "properties": {
        "experiment": {
          "type": "string",
          "minLength": 1
        },
        "run_id": {
          "type": "string",
          "minLength": 1
        },
        "timestamp": {
          "type": "string"
        },
        "num_trials": {
          "type": "integer",
          "minimum": 0
        },
        "num_warmup_trials": {
          "type": "integer",
          "minimum": 0
        },
        "status_counts": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "success",
            "error"
          ],
          "properties": {
            "success": {
              "type": "integer",
              "minimum": 0
            },
            "error": {
              "type": "integer",
              "minimum": 0
            }
          }
        }
      }
    },
    "pipeline": {
      "$ref": "#/$defs/sectionGroup"
    },
    "asr": {
      "$ref": "#/$defs/sectionGroup"
    },
    "llm": {
      "$ref": "#/$defs/sectionGroup"
    },
    "tts": {
      "$ref": "#/$defs/sectionGroup"
    }
  },
  "$defs": {
    "sectionGroup": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "latency",
        "hardware",
        "load_times",
        "inference",
        "quality"
      ],
      "properties": {
        "latency": {
          "$ref": "#/$defs/nestedMetricTree"
        },
        "hardware": {
          "$ref": "#/$defs/nestedMetricTree"
        },
        "load_times": {
          "$ref": "#/$defs/nestedMetricTree"
        },
        "inference": {
          "$ref": "#/$defs/nestedMetricTree"
        },
        "quality": {
          "$ref": "#/$defs/nestedMetricTree"
        }
      }
    },
    "nestedMetricTree": {
      "type": "object",
      "additionalProperties": {
        "anyOf": [
          {
            "$ref": "#/$defs/stats"
          },
          {
            "type": "object",
            "additionalProperties": {
              "anyOf": [
                {
                  "$ref": "#/$defs/stats"
                },
                {
                  "type": "number"
                },
                {
                  "type": "integer"
                },
                {
                  "type": "object",
                  "additionalProperties": {
                    "type": "integer"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "stats": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mean",
        "median",
        "min",
        "max",
        "std",
        "p95",
        "p99",
        "count"
      ],
      "properties": {
        "mean": {
          "type": "number"
        },
        "median": {
          "type": "number"
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "std": {
          "type": "number",
          "minimum": 0
        },
        "p95": {
          "type": "number"
        },
        "p99": {
          "type": "number"
        },
        "count": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
