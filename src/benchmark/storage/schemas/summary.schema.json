{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "summary.schema.json",
  "title": "MiniFlow Run Summary",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "experiment",
    "run_id",
    "timestamp",
    "num_trials",
    "metric_summaries"
  ],
  "properties": {
    "experiment": {
      "type": "string",
      "minLength": 1
    },
    "run_id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string"
    },
    "num_trials": {
      "type": "integer",
      "minimum": 0
    },
    "metric_summaries": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/stats"
      }
    }
  },
  "$defs": {
    "stats": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "mean",
        "median",
        "min",
        "max",
        "count"
      ],
      "properties": {
        "mean": {
          "type": "number"
        },
        "median": {
          "type": "number"
        },
        "min": {
          "type": "number"
        },
        "max": {
          "type": "number"
        },
        "std": {
          "type": "number",
          "minimum": 0
        },
        "p95": {
          "type": "number"
        },
        "p99": {
          "type": "number"
        },
        "count": {
          "type": "integer",
          "minimum": 0
        }
      }
    }
  }
}
